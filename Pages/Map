import React, { useState, useEffect } from 'react';
import { MapContainer, TileLayer, Marker, Popup, Polyline } from 'react-leaflet';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { ArrowLeft, MapPin, Navigation } from 'lucide-react';
import { Link } from 'react-router-dom';
import 'leaflet/dist/leaflet.css';

export default function Map() {
  const urlParams = new URLSearchParams(window.location.search);
  const targetLat = parseFloat(urlParams.get('lat'));
  const targetLng = parseFloat(urlParams.get('lng'));
  
  const [currentLocation, setCurrentLocation] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(
        (position) => {
          setCurrentLocation({
            lat: position.coords.latitude,
            lng: position.coords.longitude
          });
          setLoading(false);
        },
        () => {
          setLoading(false);
        }
      );
    } else {
      setLoading(false);
    }
  }, []);

  const openInGoogleMaps = () => {
    if (currentLocation) {
      window.open(
        `https://www.google.com/maps/dir/?api=1&origin=${currentLocation.lat},${currentLocation.lng}&destination=${targetLat},${targetLng}`,
        '_blank'
      );
    } else {
      window.open(
        `https://www.google.com/maps/search/?api=1&query=${targetLat},${targetLng}`,
        '_blank'
      );
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
      </div>
    );
  }

  const center = currentLocation || { lat: targetLat, lng: targetLng };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-white to-teal-50 p-4">
      <div className="container mx-auto max-w-6xl py-8">
        <Link to="/Matches" className="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 mb-6">
          <ArrowLeft className="w-4 h-4" />
          Back to Matches
        </Link>

        <Card className="shadow-xl overflow-hidden">
          <CardHeader className="border-b bg-gradient-to-r from-blue-50 to-teal-50">
            <div className="flex items-center justify-between">
              <CardTitle className="flex items-center gap-2">
                <MapPin className="w-6 h-6 text-blue-600" />
                Item Location
              </CardTitle>
              <Button onClick={openInGoogleMaps} className="bg-blue-600 hover:bg-blue-700">
                <Navigation className="w-4 h-4 mr-2" />
                Open in Google Maps
              </Button>
            </div>
          </CardHeader>

          <CardContent className="p-0">
            <div className="h-[600px] w-full">
              <MapContainer
                center={[center.lat, center.lng]}
                zoom={currentLocation ? 14 : 16}
                style={{ height: '100%', width: '100%' }}
              >
                <TileLayer
                  url="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
                  attribution='&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                />
                
                {currentLocation && (
                  <>
                    <Marker position={[currentLocation.lat, currentLocation.lng]}>
                      <Popup>Your Location</Popup>
                    </Marker>
                    <Polyline
                      positions={[
                        [currentLocation.lat, currentLocation.lng],
                        [targetLat, targetLng]
                      ]}
                      color="blue"
                      weight={3}
                      opacity={0.7}
                    />
                  </>
                )}
                
                <Marker position={[targetLat, targetLng]}>
                  <Popup>Item Found Here</Popup>
                </Marker>
              </MapContainer>
            </div>
          </CardContent>
        </Card>

        {currentLocation && (
          <div className="mt-4 text-center text-sm text-gray-600">
            <p>Blue line shows the direct route from your location to the found item</p>
            <p>Click "Open in Google Maps" for turn-by-turn directions</p>
          </div>
        )}
      </div>
    </div>
  );
}
