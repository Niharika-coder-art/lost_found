import React, { useState, useEffect, useRef } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Button } from '@/components/ui/button';
import { Send, ArrowLeft } from 'lucide-react';
import { Link } from 'react-router-dom';
import { format } from 'date-fns';

export default function Chat() {
  const urlParams = new URLSearchParams(window.location.search);
  const matchId = urlParams.get('matchId');
  
  const [user, setUser] = useState(null);
  const [message, setMessage] = useState('');
  const [otherUser, setOtherUser] = useState(null);
  const messagesEndRef = useRef(null);
  const queryClient = useQueryClient();

  useEffect(() => {
    const loadUser = async () => {
      try {
        const isAuthenticated = await base44.auth.isAuthenticated();
        if (!isAuthenticated) {
          base44.auth.redirectToLogin('/Chat');
          return;
        }
        const currentUser = await base44.auth.me();
        setUser(currentUser);
      } catch (error) {
        base44.auth.redirectToLogin('/Chat');
      }
    };
    loadUser();
  }, []);

  const { data: match } = useQuery({
    queryKey: ['match', matchId],
    queryFn: async () => {
      const matches = await base44.entities.Match.list();
      return matches.find(m => m.id === matchId);
    },
    enabled: !!matchId
  });

  const { data: messages = [] } = useQuery({
    queryKey: ['messages', matchId],
    queryFn: () => base44.entities.Message.filter({ match_id: matchId }, 'created_date', 200),
    enabled: !!matchId,
    refetchInterval: 3000,
    initialData: []
  });

  useEffect(() => {
    const loadOtherUser = async () => {
      if (!match || !user) return;
      
      const otherUserId = match.lost_user_id === user.id ? match.found_user_id : match.lost_user_id;
      const users = await base44.entities.User.list();
      const foundUser = users.find(u => u.id === otherUserId);
      setOtherUser(foundUser);
    };

    loadOtherUser();
  }, [match, user]);

  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [messages]);

  const sendMessageMutation = useMutation({
    mutationFn: async (content) => {
      const receiverId = match.lost_user_id === user.id ? match.found_user_id : match.lost_user_id;
      
      await base44.entities.Message.create({
        match_id: matchId,
        sender_id: user.id,
        receiver_id: receiverId,
        content
      });

      await base44.entities.Notification.create({
        user_id: receiverId,
        type: 'chat_message',
        title: 'New Message',
        message: `${user.full_name} sent you a message`,
        link: `Chat?matchId=${matchId}`
      });
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['messages', matchId] });
      setMessage('');
    }
  });

  const handleSend = (e) => {
    e.preventDefault();
    if (!message.trim()) return;
    sendMessageMutation.mutate(message);
  };

  if (!user || !match) return null;

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-white to-teal-50 p-4">
      <div className="container mx-auto max-w-4xl py-8">
        <Link to="/Matches" className="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 mb-6">
          <ArrowLeft className="w-4 h-4" />
          Back to Matches
        </Link>

        <Card className="shadow-xl">
          <CardHeader className="border-b bg-gradient-to-r from-blue-50 to-teal-50">
            <CardTitle className="flex items-center justify-between">
              <span>Chat with {otherUser?.full_name || 'User'}</span>
              <span className="text-sm font-normal text-gray-600">
                {otherUser?.email}
              </span>
            </CardTitle>
          </CardHeader>

          <CardContent className="p-0">
            {/* Messages */}
            <div className="h-[500px] overflow-y-auto p-6 space-y-4">
              {messages.length === 0 ? (
                <div className="flex items-center justify-center h-full text-gray-500">
                  <p>No messages yet. Start the conversation!</p>
                </div>
              ) : (
                messages.map(msg => {
                  const isMine = msg.sender_id === user.id;
                  return (
                    <div key={msg.id} className={`flex ${isMine ? 'justify-end' : 'justify-start'}`}>
                      <div className={`max-w-[70%] rounded-2xl px-4 py-2 ${
                        isMine 
                          ? 'bg-blue-600 text-white' 
                          : 'bg-gray-100 text-gray-900'
                      }`}>
                        <p className="text-sm">{msg.content}</p>
                        <p className={`text-xs mt-1 ${isMine ? 'text-blue-100' : 'text-gray-500'}`}>
                          {format(new Date(msg.created_date), 'HH:mm')}
                        </p>
                      </div>
                    </div>
                  );
                })
              )}
              <div ref={messagesEndRef} />
            </div>

            {/* Input */}
            <form onSubmit={handleSend} className="border-t p-4 flex gap-2">
              <Input
                placeholder="Type your message..."
                value={message}
                onChange={(e) => setMessage(e.target.value)}
                className="flex-1"
              />
              <Button type="submit" disabled={!message.trim() || sendMessageMutation.isPending}>
                <Send className="w-4 h-4" />
              </Button>
            </form>
          </CardContent>
        </Card>
      </div>
    </div>
  );
}
