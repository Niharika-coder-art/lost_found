import React, { useState } from 'react';
import { base44 } from '@/api/base44Client';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { Card, CardContent } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Textarea } from '@/components/ui/textarea';
import { Tabs, TabsContent, TabsList, TabsTrigger } from '@/components/ui/tabs';
import { Badge } from '@/components/ui/badge';
import { CheckCircle, XCircle, AlertTriangle, Package } from 'lucide-react';
import { format } from 'date-fns';
import { toast } from 'sonner';

export default function PendingItems() {
  const [selectedItem, setSelectedItem] = useState(null);
  const [adminNotes, setAdminNotes] = useState('');
  const queryClient = useQueryClient();

  const { data: pendingLost = [] } = useQuery({
    queryKey: ['pendingLost'],
    queryFn: () => base44.entities.LostItem.filter({ status: 'pending_approval' }, '-created_date', 100),
    initialData: []
  });

  const { data: pendingFound = [] } = useQuery({
    queryKey: ['pendingFound'],
    queryFn: () => base44.entities.FoundItem.filter({ status: 'pending_approval' }, '-created_date', 100),
    initialData: []
  });

  const approveMutation = useMutation({
    mutationFn: async ({ item, type }) => {
      const Entity = type === 'lost' ? base44.entities.LostItem : base44.entities.FoundItem;
      await Entity.update(item.id, { status: 'approved', admin_notes: adminNotes });

      const users = await base44.entities.User.list();
      const user = users.find(u => u.email === item.created_by);

      if (user) {
        await base44.entities.Notification.create({
          user_id: user.id,
          type: 'item_approved',
          title: 'Item Approved',
          message: `Your ${type} item "${item.item_name}" has been approved and is now visible.`
        });
      }
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['pendingLost'] });
      queryClient.invalidateQueries({ queryKey: ['pendingFound'] });
      queryClient.invalidateQueries({ queryKey: ['adminStats'] });
      setSelectedItem(null);
      setAdminNotes('');
      toast.success('Item approved successfully');
    }
  });

  const rejectMutation = useMutation({
    mutationFn: async ({ item, type }) => {
      const Entity = type === 'lost' ? base44.entities.LostItem : base44.entities.FoundItem;
      await Entity.update(item.id, { status: 'rejected', admin_notes: adminNotes });

      const users = await base44.entities.User.list();
      const user = users.find(u => u.email === item.created_by);

      if (user) {
        await base44.entities.Notification.create({
          user_id: user.id,
          type: 'item_rejected',
          title: 'Item Rejected',
          message: `Your ${type} item "${item.item_name}" was rejected. Reason: ${adminNotes}`
        });
      }
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['pendingLost'] });
      queryClient.invalidateQueries({ queryKey: ['pendingFound'] });
      queryClient.invalidateQueries({ queryKey: ['adminStats'] });
      setSelectedItem(null);
      setAdminNotes('');
      toast.success('Item rejected');
    }
  });

  const ItemCard = ({ item, type }) => (
    <Card className="hover:shadow-lg transition-shadow">
      <CardContent className="p-4">
        <div className="flex gap-4">
          {item.image_url && (
            <img src={item.image_url} alt={item.item_name} className="w-24 h-24 object-cover rounded-lg" />
          )}
          <div className="flex-1 space-y-2">
            <div className="flex items-start justify-between">
              <h3 className="font-semibold text-lg">{item.item_name}</h3>
              <Badge className={type === 'lost' ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800'}>
                {type}
              </Badge>
            </div>
            <p className="text-sm text-gray-600">{item.description}</p>
            <div className="text-xs text-gray-500">
              <p>Category: {item.category}</p>
              <p>Reported by: {item.created_by}</p>
              <p>Date: {format(new Date(item.created_date), 'MMM dd, yyyy HH:mm')}</p>
            </div>
            <div className="flex gap-2 pt-2">
              <Button
                size="sm"
                className="bg-green-600 hover:bg-green-700"
                onClick={() => {
                  setSelectedItem({ item, type, action: 'approve' });
                  setAdminNotes('');
                }}
              >
                <CheckCircle className="w-4 h-4 mr-1" />
                Approve
              </Button>
              <Button
                size="sm"
                variant="destructive"
                onClick={() => {
                  setSelectedItem({ item, type, action: 'reject' });
                  setAdminNotes('');
                }}
              >
                <XCircle className="w-4 h-4 mr-1" />
                Reject
              </Button>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>
  );

  return (
    <div className="space-y-6">
      <Tabs defaultValue="lost">
        <TabsList className="grid w-full grid-cols-2">
          <TabsTrigger value="lost">
            <AlertTriangle className="w-4 h-4 mr-2" />
            Lost Items ({pendingLost.length})
          </TabsTrigger>
          <TabsTrigger value="found">
            <CheckCircle className="w-4 h-4 mr-2" />
            Found Items ({pendingFound.length})
          </TabsTrigger>
        </TabsList>

        <TabsContent value="lost" className="space-y-4 mt-6">
          {pendingLost.length === 0 ? (
            <Card>
              <CardContent className="flex flex-col items-center justify-center py-12 text-gray-500">
                <Package className="w-16 h-16 mb-4 opacity-50" />
                <p>No pending lost items</p>
              </CardContent>
            </Card>
          ) : (
            pendingLost.map(item => <ItemCard key={item.id} item={item} type="lost" />)
          )}
        </TabsContent>

        <TabsContent value="found" className="space-y-4 mt-6">
          {pendingFound.length === 0 ? (
            <Card>
              <CardContent className="flex flex-col items-center justify-center py-12 text-gray-500">
                <Package className="w-16 h-16 mb-4 opacity-50" />
                <p>No pending found items</p>
              </CardContent>
            </Card>
          ) : (
            pendingFound.map(item => <ItemCard key={item.id} item={item} type="found" />)
          )}
        </TabsContent>
      </Tabs>

      {/* Action Modal */}
      {selectedItem && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
          <Card className="w-full max-w-lg">
            <CardContent className="p-6 space-y-4">
              <h3 className="text-xl font-bold">
                {selectedItem.action === 'approve' ? 'Approve' : 'Reject'} Item
              </h3>
              <p className="text-sm text-gray-600">
                Item: <strong>{selectedItem.item.item_name}</strong>
              </p>
              
              <div className="space-y-2">
                <label className="text-sm font-medium">
                  Admin Notes {selectedItem.action === 'reject' && '(Required)'}
                </label>
                <Textarea
                  placeholder="Add notes for the user..."
                  value={adminNotes}
                  onChange={(e) => setAdminNotes(e.target.value)}
                  rows={3}
                />
              </div>

              <div className="flex gap-3">
                <Button
                  variant="outline"
                  onClick={() => {
                    setSelectedItem(null);
                    setAdminNotes('');
                  }}
                  className="flex-1"
                >
                  Cancel
                </Button>
                <Button
                  className={selectedItem.action === 'approve' ? 'bg-green-600 hover:bg-green-700 flex-1' : 'bg-red-600 hover:bg-red-700 flex-1'}
                  onClick={() => {
                    if (selectedItem.action === 'reject' && !adminNotes) {
                      toast.error('Please provide a reason for rejection');
                      return;
                    }
                    if (selectedItem.action === 'approve') {
                      approveMutation.mutate(selectedItem);
                    } else {
                      rejectMutation.mutate(selectedItem);
                    }
                  }}
                  disabled={approveMutation.isPending || rejectMutation.isPending}
                >
                  {selectedItem.action === 'approve' ? 'Approve' : 'Reject'}
                </Button>
              </div>
            </CardContent>
          </Card>
        </div>
      )}
    </div>
  );
}
